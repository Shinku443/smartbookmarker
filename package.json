{
  "name": "emperor-bookmarking",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "@prisma/client": "5.15.0",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "fuse.js": "^7.1.0",
    "zustand": "^5.0.9",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "prisma": "5.15.0",
    "typescript": "^5.0.0",
    "ts-node-dev": "^2.0.0",
    "vite": "^7.3.0",
    "@vitejs/plugin-react": "^5.1.2",
    "tailwindcss": "^4.1.18",
    "postcss": "^8.5.6",
    "autoprefixer": "^10.4.23",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/node": "^20.0.0"
  },
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only packages/server/src/index.ts",
    "build": "tsc -p packages/server/tsconfig.json",
    "start": "node packages/server/dist/index.js",
    "prisma:generate": "prisma generate --schema=packages/server/prisma/schema.prisma",
    "prisma:migrate": "prisma migrate dev --schema=packages/server/prisma/schema.prisma"
  }
}