datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Book {
  id        String   @id @default(cuid())
  title     String
  emoji     String?
  order     BigInt
  parentBookId String?
  parentBook Book?   @relation("BookHierarchy", fields: [parentBookId], references: [id])
  childBooks Book[]  @relation("BookHierarchy")
  pages     Page[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Page {
  id        String   @id @default(cuid())
  bookId    String?
  book      Book?    @relation(fields: [bookId], references: [id])
  title     String
  content   String?
  order     BigInt
  pinned    Boolean  @default(false)
  tags      PageTag[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Tag {
  id        String    @id @default(cuid())
  name      String
  color     String?
  pages     PageTag[]
}

model PageTag {
  pageId String
  tagId  String

  page Page @relation(fields: [pageId], references: [id])
  tag  Tag  @relation(fields: [tagId], references: [id])

  @@id([pageId, tagId])
}

model SyncMetadata {
  id         String   @id @default(cuid())
  entityType String
  entityId   String   @unique
  version    Int      @default(1)
  updatedAt  DateTime @updatedAt
}

model UserPreference {
  id            String   @id @default(cuid())
  userId        String   @unique
  darkMode      Boolean  @default(false)
  itemsPerPage  Int      @default(20)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
